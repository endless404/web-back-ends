//		@RequestParam("readerName")String readerName,
//		if(readerName == null) {
//			session.setAttribute("msg", "读者名字不能为空！");
//		}else {			
			List<reader> readerList = readerService.findReader(read);
//			if(readerList != null) {
//				List<reader> readerList = readerService.findReader(read);
				session.setAttribute("readerList", readerList);
//			}else {
//				session.setAttribute("msg", "没有此人！");
//			}
		return mv;
	}
	
}
